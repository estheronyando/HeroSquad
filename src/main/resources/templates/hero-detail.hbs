{{#partial "content"}}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <a href="/upload/{{hero.id}}"><img src="data:image/png;base64, {{encodedString}}" class="rounded-circle" height="150" width="150" /></a>
                <h2>{{hero.name}}</h2>
            </div>
            <div class="card-body">
                <p class="card-text">Age: {{hero.age}}</p>
                <p class="card-text">Special Power: {{hero.power}}</p>
                <p class="card-text">Weakness: {{hero.weakness}}</p>
                <p class="card-text">squad: {{squad.name}}</p>
            </div>

            <div class="card-footer">
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item">
                        <a class="nav-link btn btn-danger" href="/heroes/{{hero.id}}/delete">Delete</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" href="/heroes/{{hero.id}}/edit">Edit</a>
                    </li>
                </ul>
            </div>

        </div>

    </div>

{{/partial}}

{{> layout.hbs}}