{{#partial "content"}}

   <div class="container">

       <div class="card">
           <div class="card-header">
               <h3>Upload {{hero.name}}'s image</h3>
           </div>
           <div class="card-body">
               <form action="/upload/{{hero.id}}" enctype='multipart/form-data' method="post">
                   <div class="form-group">
                       <label for="image">Image</label>
                       <input id="image" name="image" type="file" class="form-control" accept='.png, .jpg, .jpeg' required>
                   </div>
                   <button type="submit" class="btn btn-default" value="Upload">Go!</button>
               </form>
           </div>
       </div>


   </div>
{{/partial}}

{{> layout.hbs}}