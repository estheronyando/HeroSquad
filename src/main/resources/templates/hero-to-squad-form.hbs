{{#partial "content"}}

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>Add Hero To {{squad.name}}</h3>
            </div>
            <div class="card-body">
                <form action="/squads/{{squad.id}}/heroes/new" method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input id="name" name="name" class="form-control" type="text" required>
                    </div>
                    <div class="form-group">
                        <label for="age">Age</label>
                        <input id="age" name="age" class="form-control" type="number" required>
                    </div>
                    <div class="form-group">
                        <label for="power">Special Power</label>
                        <input id="power" name="power" class="form-control"  type="text" required>
                    </div>
                    <div class="form-group">
                        <label for="weakness">Weakness</label>
                        <input id="weakness" name="weakness" class="form-control" type="text" required>
                    </div>
                    <button type="submit" class="btn btn-default">Go!</button>
                </form>
            </div>
        </div>

    </div>

{{/partial}}

{{> layout.hbs}}